<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="IconView">
        <attr name="name" format="reference|string" />
        <attr name="color" format="reference|color" />
        <attr name="size" format="reference|dimension" />
    </declare-styleable>

    <declare-styleable name="ImageView">
        <attr name="imageSrc" format="string|reference|color" />
        <attr name="imageHolder" format="reference" />
        <attr name="imageError" format="reference" />
        <attr name="imageRound" format="boolean" />
        <attr name="imageCorner" format="integer" />
        <attr name="imageCornerTopLeft" format="integer" />
        <attr name="imageCornerTopRight" format="integer" />
        <attr name="imageCornerBottomRight" format="integer" />
        <attr name="imageCornerBottomLeft" format="integer" />
    </declare-styleable>

    <declare-styleable name="ButtonView">
        <attr name="buttonType" format="enum">
            <enum name="primary" value="0"/>
            <enum name="success" value="1"/>
            <enum name="warning" value="2"/>
            <enum name="danger" value="3"/>
        </attr>
        <attr name="buttonPlain" format="boolean"/>
        <attr name="buttonHairline" format="boolean"/>
        <attr name="buttonLoading" format="boolean"/>
        <attr name="buttonLoadingText" format="string"/>
        <attr name="buttonIcon" format="reference"/>
        <attr name="buttonSize" format="enum">
            <enum name="mini" value="0"/>
            <enum name="small" value="1"/>
            <enum name="normal" value="2"/>
            <enum name="large" value="3"/>
        </attr>
        <attr name="buttonText" format="string|reference"/>
        <attr name="buttonColor" format="color|reference|string"/>
        <attr name="buttonSquare" format="boolean"/>
        <attr name="buttonRound" format="boolean"/>
        <attr name="buttonDisabled" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="BadgeView">
        <attr name="badgeIsDot" format="boolean" />
        <attr name="badgeValue" format="string" />
        <attr name="badgeMax" format="boolean" />
        <attr name="badgeType" format="enum">
            <enum name="primary" value="0"/>
            <enum name="success" value="1"/>
            <enum name="error" value="2"/>
            <enum name="warning" value="3"/>
            <enum name="info" value="4"/>
        </attr>
        <attr name="badgeShowZero" format="boolean" />
        <attr name="badgeBgColor" format="color" />
        <attr name="badgeShape" format="enum">
            <enum name="circle" value="0"/>
            <enum name="horn" value="1"/>
        </attr>
        <attr name="badgeNumberType" format="enum">
            <enum name="overflow" value="0"/>
            <enum name="ellipsis" value="1"/>
            <enum name="limit" value="2"/>
        </attr>
        <attr name="badgeInverted" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TabbarView">

    </declare-styleable>

    <declare-styleable name="NavBarView">
        <attr name="leftText" format="string|reference" />
        <attr name="titleText" format="string|reference" />
        <attr name="rightText" format="string|reference" />
    </declare-styleable>



    <declare-styleable name="TabbarItemView">
        <attr name="tabbarItemIconActive" format="reference" />
        <attr name="tabbarItemIconInactive" format="reference" />
        <attr name="tabbarItemIconWidth" format="dimension" />
        <attr name="tabbarItemIconHeight" format="dimension" />
    </declare-styleable>


<!--  TODO  -->

    <declare-styleable name="TabsView">
    </declare-styleable>

    <declare-styleable name="CellView">
        <attr name="cellTitle" format="string|reference" />
        <attr name="cellValue" format="string|reference" />
        <attr name="cellLabel" format="string|reference" />
        <attr name="cellSize" format="enum">
            <enum name="mini" value="0"/>
            <enum name="small" value="1"/>
            <enum name="normal" value="2"/>
            <enum name="large" value="3"/>
        </attr>
        <attr name="cellIcon" format="reference" />
        <attr name="cellBorder" format="boolean" />
        <attr name="cellClickable" format="boolean" />
        <attr name="cellIsLink" format="boolean" />
        <attr name="cellRequired" format="boolean" />
        <attr name="cellCenter" format="boolean" />
        <attr name="cellArrowDirection" format="enum">
            <enum name="up" value="0"/>
            <enum name="down" value="1"/>
            <enum name="left" value="2"/>
            <enum name="right" value="3"/>
        </attr>
        <attr name="cellArrow" format="reference" />

        <attr name="cellIconSize" format="integer" />
        <attr name="cellTitleSize" format="dimension|reference" />
        <attr name="cellTitleColor" format="color|reference" />
        <attr name="cellLabelSize" format="dimension|reference" />
        <attr name="cellLabelColor" format="color|reference" />
        <attr name="cellLabelIcon" format="reference" />
        <attr name="cellValueSize" format="dimension|reference" />
        <attr name="cellValueColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="BackgroundView">
        <attr name="backgroundColor" format="color" />
        <attr name="backgroundRound" format="boolean" />
        <attr name="backgroundCorner" format="integer" />
        <attr name="backgroundCornerTopLeft" format="integer" />
        <attr name="backgroundCornerTopRight" format="integer" />
        <attr name="backgroundCornerBottomRight" format="integer" />
        <attr name="backgroundCornerBottomLeft" format="integer" />
    </declare-styleable>

</resources>