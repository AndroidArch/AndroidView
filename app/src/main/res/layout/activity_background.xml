            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="primary"
            android:padding="20dp"
            android:background="@color/v_content_color"
            app:backgroundCorner="@{20}"
            />

    </LinearLayout>
</layout>
