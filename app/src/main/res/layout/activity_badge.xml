<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".BadgeActivity">

    <TextView
        android:text="直角边形状"
        android:layout_marginTop="20dp"
        android:textColor="@color/v_content_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.bigoat.android.view.badge.NavBarView
        android:text="9999"
        app:badgeShape="horn"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:text="徽章数显示方式"
        android:textColor="@color/v_content_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.bigoat.android.view.badge.NavBarView
            android:text="99999"
            app:badgeNumberType="overflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.bigoat.android.view.badge.NavBarView
            android:text="9999"
            app:badgeNumberType="ellipsis"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.bigoat.android.view.badge.NavBarView
            android:text="1234"
            app:badgeNumberType="limit"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.bigoat.android.view.badge.NavBarView
            android:text="9911119.123"
            app:badgeNumberType="limit"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>


    <TextView
        android:layout_marginTop="20dp"
        android:text="显示圆点"
        android:textColor="@color/v_content_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.bigoat.android.view.badge.NavBarView
        android:text="11"
        app:badgeIsDot="true"
        android:layout_width="20dp"
        android:layout_height="20dp"/>


    <TextView
        android:layout_marginTop="20dp"
        android:text="自定义主题"
        android:textColor="@color/v_content_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.bigoat.android.view.badge.NavBarView
            android:text="9"
            app:badgeType="primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.bigoat.android.view.badge.NavBarView
            android:text="9"
            app:badgeType="warning"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.bigoat.android.view.badge.NavBarView
            android:text="9"
            app:badgeType="success"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.bigoat.android.view.badge.NavBarView
            android:text="9"
            android:layout_marginStart="20dp"
            app:badgeType="error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:text="反转色"
        android:textColor="@color/v_content_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.bigoat.android.view.badge.NavBarView
            android:text="9"
            app:badgeType="primary"
            app:badgeInverted="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.bigoat.android.view.badge.NavBarView
            android:text="9"
            app:badgeType="warning"
            app:badgeInverted="true"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.bigoat.android.view.badge.NavBarView
            android:text="9"
            app:badgeType="success"
            app:badgeInverted="true"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.bigoat.android.view.badge.NavBarView
            android:text="9"
            android:layout_marginStart="20dp"
            app:badgeType="error"
            app:badgeInverted="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


</LinearLayout>