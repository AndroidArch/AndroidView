<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.bigoat.android.view.navbar.NavBarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/v_padding"
            app:titleText="颜色"
            />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alignmentMode="alignMargins"
            android:columnCount="4"
            android:orientation="horizontal"
            android:padding="@dimen/v_padding_md"
            android:useDefaultMargins="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="4"
                android:text="主色调"
                android:textSize="@dimen/v_font_size_md" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_primary"
                android:gravity="center"
                android:text="Primary"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_primary_dark"
                android:gravity="center"
                android:text="Dark"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_primary_disabled"
                android:gravity="center"
                android:text="Disabled"
                android:textColor="@color/white" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_primary_light"
                android:gravity="center"
                android:text="Light"
                android:textColor="@color/v_info" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="4"
                android:text="Error"
                android:textSize="@dimen/v_font_size_md" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_error"
                android:gravity="center"
                android:text="Error"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_error_dark"
                android:gravity="center"
                android:text="Dark"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_error_disabled"
                android:gravity="center"
                android:text="Disabled"
                android:textColor="@color/white" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_error_light"
                android:gravity="center"
                android:text="Light"
                android:textColor="@color/v_info" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="4"
                android:layout_marginBottom="8dp"
                android:text="Warning"
                android:textSize="@dimen/v_font_size_md" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_warning"
                android:gravity="center"
                android:text="Warning"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_warning_dark"
                android:gravity="center"
                android:text="Dark"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_warning_disabled"
                android:gravity="center"
                android:text="Disabled"
                android:textColor="@color/white" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_warning_light"
                android:gravity="center"
                android:text="Light"
                android:textColor="@color/v_info" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="4"
                android:layout_marginBottom="8dp"
                android:text="Info"
                android:textSize="@dimen/v_font_size_md" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_info"
                android:gravity="center"
                android:text="Info"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_info_dark"
                android:gravity="center"
                android:text="Dark"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_info_disabled"
                android:gravity="center"
                android:text="Disabled"
                android:textColor="@color/white" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_info_light"
                android:gravity="center"
                android:text="Light"
                android:textColor="@color/v_info" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="4"
                android:layout_marginBottom="8dp"
                android:text="Success"
                android:textSize="@dimen/v_font_size_md" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_success"
                android:gravity="center"
                android:text="Success"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_success_dark"
                android:gravity="center"
                android:text="Dark"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_success_disabled"
                android:gravity="center"
                android:text="Disabled"
                android:textColor="@color/white" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_success_light"
                android:gravity="center"
                android:text="Light"
                android:textColor="@color/v_info" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="4"
                android:layout_marginBottom="8dp"
                android:text="文字颜色"
                android:textSize="@dimen/v_font_size_md" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_main_color"
                android:gravity="center"
                android:text="主要文字"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_content_color"
                android:gravity="center"
                android:text="常规文字"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_tips_color"
                android:gravity="center"
                android:text="次要文字"
                android:textColor="@color/white" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_light_color"
                android:gravity="center"
                android:text="占位文字"
                android:textColor="@color/v_info" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="4"
                android:layout_marginBottom="8dp"
                android:text="边框颜色"
                android:textSize="@dimen/v_font_size_md" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_border_color"
                android:gravity="center"
                android:text="一级边框"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_border_color_II"
                android:gravity="center"
                android:text="二级边框"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_border_color_III"
                android:gravity="center"
                android:text="三级边框"
                android:textColor="@color/white" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_border_color_IV"
                android:gravity="center"
                android:text="四级边框"
                android:textColor="@color/v_info" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="4"
                android:layout_marginBottom="8dp"
                android:text="基础颜色"
                android:textSize="@dimen/v_font_size_md" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@color/v_bg_color"
                android:gravity="center"
                android:text="背景色"/>


        </GridLayout>

    </LinearLayout>


</ScrollView>

